<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GraduationProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF4B12</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GraduationProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GraduationProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GraduationProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="what_art_do">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="explore_art">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="recommended">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="duration">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:textColor">
            #8B8B8B
        </item>

    </style>

    <style name="title2">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            #151515
        </item>

    </style>

    <style name="the_starry_">

        <item name="android:textSize">
